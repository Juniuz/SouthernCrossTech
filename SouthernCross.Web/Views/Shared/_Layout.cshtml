<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Southern Cross Health Society Members</title>

    @await Html.PartialAsync("_Styles")
    @await Html.PartialAsync("_Scripts")
</head>
<body>
    <header>
        <nav class="navigation-bar">
            <span>
                <a href="#" onclick="openSlideMenu()">
                    <svg width="30" height="30">
                        <path d="M0,5 30,5" stroke="#fff" stroke-width="5"></path>
                        <path d="M0,14 30,14" stroke="#fff" stroke-width="5"></path>
                        <path d="M0,23 30,23" stroke="#fff" stroke-width="5"></path>
                    </svg>
                </a>
            </span>
            <ul class="navigation-bar-nav">
                <li><a href="#">Member Search</a></li>
                <li><a href="#">Search Result</a></li>
            </ul>
        </nav>

        <div id="side-menu" class="side-navigation">
            <a href="#" class="btn-close" onclick="closeSlideMenu()">&times;</a>
            <a href="#" class="side-menu-item">Member Search</a>
            <a href="#" class="side-menu-item">Search Results</a>
        </div>
    </header>

    <div id="main" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
            function openSlideMenu() {
                document.getElementById("side-menu").style.width = "250px";
                document.getElementById("main").style.marginLeft = "250px";
            }

            function closeSlideMenu() {
                document.getElementById("side-menu").style.width = "0";
                document.getElementById("main").style.marginLeft = "0";
            }
    </script>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Southern Cross Medical Care Society - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
