        <label for="serviceDate">Service Date</label>
        <input id="serviceDate" type="date" class="form-control" />
    </div>

    <label>Search using</label>
    <hr />

    <div class="form-group">
        <label for="policyNumber">Policy Number</label>
        <input id="policyNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label for="memberCardNumber">Member Card Number</label>
        <input id="memberCardNumber" type="text" class="form-control" />
