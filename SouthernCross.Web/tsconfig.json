{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./scripts",
    "rootDir": "scripts",
    "outDir": "scripts/dist",
    "module": "commonjs",
    "declaration": true
  },
  "include": [
    "scripts"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "definitions",
    "dist",
    "*.d.ts",
    "wwwroot"
  ]
}